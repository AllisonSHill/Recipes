@page
@model RazorPagesRecipe.Pages.Ingredients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingredient.ID" />
            <div class="form-group">
                <label asp-for="Ingredient.Name" class="control-label"></label>
                <input asp-for="Ingredient.Name" class="form-control" />
                <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Amount" class="control-label"></label>
                <input asp-for="Ingredient.Amount" class="form-control" />
                <span asp-validation-for="Ingredient.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Instructions" class="control-label"></label>
                <input asp-for="Ingredient.Instructions" class="form-control" />
                <span asp-validation-for="Ingredient.Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recipe</label>
                <select asp-for="RecipeID" asp-items="Model.recipeList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
