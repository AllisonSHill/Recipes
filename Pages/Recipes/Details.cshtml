@page
@model RazorPagesRecipe.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Meal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Meal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Information)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Information)
        </dd>
        <dt class="col-sm-2">
            Ingredients
        </dt>
        <dd class="col-sm-10">
            @foreach (var ingredient in Model.Recipe.Ingredients)
            {
                @await Html.PartialAsync("../Ingredients/_viewIngredients", ingredient);
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
